<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%n%msg%n}"></PatternLayout>
        </Console>
        <File name="LogToFile" fileName="src/resources/cardealership.html">
            <HtmlLayout charset="UTF-8" title="CarDealership Logs" locationInfo="true"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="console"/>
            <AppenderRef ref="LogToFile"/>
        </Root>
    </Loggers>
</Configuration>